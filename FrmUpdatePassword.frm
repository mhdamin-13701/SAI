    CheckNewPassword = True
Else
    CheckNewPassword = False
End If
End Function
Sub SavePassword()
If CheckNewPassword Then
    sqlText = "Update Users Set Password='" & TxtConfirmPassword.text & "' Where UserId=" & UserId
    de.con.Execute (sqlText)
